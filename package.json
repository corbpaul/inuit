{
  "name": "sassStarter",
  "description": "",
  "devDependencies": {
    "clean-css": "^3.0.10",
    "node-sass": "^2.0.1",
    "nodemon": "^1.3.7"
  },
  "scripts": {
    
    "build:css": 		   "node-sass src/sass/main.scss assets/css/main.css",
    "postbuild:css": 	 "cleancss --source-map --output assets/css/main.min.css assets/css/main.css",
    
    "watch:css": 		   "nodemon -watch src/sass -e scss -x \"npm run build:css\"",
    "watch": 			     "npm run watch:css"
  }
}
